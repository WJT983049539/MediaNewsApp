<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_140"
    >

    <ImageView
        android:id="@+id/demand_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_91"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/default_image"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/demand_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="as dasdad"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#383838"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/demand_img" />

    <TextView
        android:id="@+id/demand_decript"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4.5dp"
        android:text="asd a da"
        android:textColor="#909090"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/demand_title" />
</androidx.constraintlayout.widget.ConstraintLayout>