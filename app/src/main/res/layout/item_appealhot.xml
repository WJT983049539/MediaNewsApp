<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/hot_bg"
    android:layout_height="@dimen/dp_220"
    android:layout_margin="@dimen/dp_10"
    >


    <ImageView
        android:id="@+id/img_hotuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/hotimag" />

    <TextView
        android:id="@+id/tv_hotname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_7"
        android:layout_marginTop="@dimen/dp_15"
        android:text="admin"
        android:textColor="#282828"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_hotuser"
        app:layout_constraintStart_toEndOf="@+id/img_hotuser"
         />

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/dp_43"
        android:background="#ffeaeaea"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></View>

    <ImageView
        android:id="@+id/img_statu"
        android:layout_width="@dimen/dp_47"
        android:layout_height="@dimen/dp_43"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/dhf" />

    <ImageView
        android:id="@+id/img_hotimg"
        android:layout_width="@dimen/dp_71"
        android:layout_height="@dimen/dp_71"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view4"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_8"
        android:text="投诉"
        android:textColor="#282828"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/img_hotimg"
        app:layout_constraintTop_toTopOf="@+id/img_hotimg" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="@dimen/dp_225"
        android:layout_height="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_11"
        android:text=""
        android:textSize="12sp"
        android:textColor="#827F7F"
        android:gravity="center|left"
        app:layout_constraintBottom_toBottomOf="@+id/img_hotimg"
        app:layout_constraintStart_toEndOf="@+id/img_hotimg"
        app:layout_constraintTop_toBottomOf="@+id/tv_subject" />

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/dp_12"
        android:background="#ffeaeaea"
        app:layout_constraintTop_toBottomOf="@+id/img_hotimg"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/view5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="类别"
                android:textColor="#898989"
                android:textSize="10sp"
                >
            </TextView>

                <TextView
                    android:id="@+id/tv_suggest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="建议"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#FC8636"
                    android:textSize="12sp"
                     />


        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#000000"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="10dp"
            ></View>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="开始日期"
                android:textColor="#898989"
                android:textSize="10sp"
                >
            </TextView>

            <TextView
                android:id="@+id/tv_cz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:text="2020-10-17"
                android:textColor="#4D4D4D"
                android:textSize="13sp"
                />
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:text="2020-10-17"
                android:textColor="#4D4D4D"
                android:textSize="13sp"
                />

        </LinearLayout>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#000000"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="10dp"
            ></View>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="部门"
                android:textColor="#898989"
                android:textSize="10sp"
                >
            </TextView>

            <TextView
                android:id="@+id/tv_OrganizationName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="企划部"
                android:textColor="#4D4D4D"
                android:textSize="13sp"
                android:layout_gravity="center"
                android:gravity="center"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>