<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">
<include layout="@layout/commontlbar_layout"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_margin="@dimen/dp_20"
        android:background="@drawable/edit_pwd_bg"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="旧密码"
            android:textSize="13sp"
            android:textColor="#111111"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            ></TextView>

        <EditText
            android:id="@+id/edit_jiupwd"
            android:inputType="textPassword"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:hint="  请输入旧密码"
            android:textColor="#000"
            android:gravity="center"
            android:background="@null"
            ></EditText>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_margin="@dimen/dp_20"
        android:background="@drawable/edit_pwd_bg"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="新密码"
            android:textSize="13sp"
            android:textColor="#111111"
            android:gravity="center"
            ></TextView>

        <EditText
            android:id="@+id/edit_newpwd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:inputType="textPassword"
            android:hint="  请输入旧密码"
            android:textColor="#000"
            android:gravity="center"
            android:background="@null"
            ></EditText>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_margin="@dimen/dp_20"
        android:background="@drawable/edit_pwd_bg"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="确认密码"
            android:textSize="13sp"
            android:textColor="#111111"
            android:gravity="center"
            ></TextView>

        <EditText
            android:id="@+id/edit_surepwd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:hint="  请输入确认密码"
            android:textColor="#000"
            android:inputType="textPassword"
            android:gravity="center"
            android:background="@null"
            ></EditText>

    </LinearLayout>
    <Button
        android:id="@+id/surepsd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:layout_margin="@dimen/dp_20"
        android:textColor="#fff"
        android:text="完成"
        android:background="@drawable/edit_pwd_button_bg"
        >

    </Button>



</LinearLayout>