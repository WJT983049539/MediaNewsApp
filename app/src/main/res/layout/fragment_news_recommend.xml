<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--scrollView-->
    <com.rcdz.medianewsapp.view.pullscrllview.NPullScrollView
        android:id="@+id/mScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:descendantFocusability="blocksDescendants"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >

            <!--轮播图-->
            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:banner_radius="15dp"
                android:layout_margin="10dp"
                app:banner_indicator_normal_color="#88ffffff"
                app:banner_indicator_selected_color="#F41C0C"
                android:background="#fff">
            </com.youth.banner.Banner>


            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="#f0f0f0" />

            <!--常用功能-->
            <LinearLayout
                android:id="@+id/linearLayout_home_main"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#fff"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.17"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="7"
                        android:src="@mipmap/xswz"
                        android:layout_margin="12dp"
                        >


                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:text="线上问政"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:textColor="#4A4A4A"
                        android:layout_marginBottom="7dp"
                        >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.17"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="7"
                        android:src="@mipmap/gzh"
                        android:layout_margin="12dp"
                        >


                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:text="公众号"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:textColor="#4A4A4A"
                        android:layout_marginBottom="7dp"
                        >
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.17"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="7"
                        android:src="@mipmap/jgdw"
                        android:layout_margin="12dp"
                        >


                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:text="机构单位"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:textColor="#4A4A4A"
                        android:layout_marginBottom="7dp"
                        >
                    </TextView>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.17"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="7"
                        android:src="@mipmap/xzsp"
                        android:layout_margin="12dp"
                        >


                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:text="行政审批"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:textColor="#4A4A4A"
                        android:layout_marginBottom="7dp"
                        >
                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.17"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="7"
                        android:src="@mipmap/fwrx"
                        android:layout_margin="12dp"
                        >


                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:text="服务热线"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:textColor="#4A4A4A"
                        android:layout_marginBottom="7dp"
                        >
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.17"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="7"
                        android:src="@mipmap/more"
                        android:layout_margin="12dp"
                        >


                    </ImageView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:text="更多"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:textColor="#4A4A4A"
                        android:layout_marginBottom="7dp"
                        >
                    </TextView>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_121"
                android:background="#fff"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.35"
                    android:layout_margin="5dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <ImageView
                            android:id="@+id/topvideonew_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >
                        </ImageView>
                        <ImageView
                            android:id="@+id/topvideonew_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/zhibo"
                            android:visibility="gone"
                            ></ImageView>

                        <TextView
                            android:id="@+id/topvideonew_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="@dimen/dp_30"
                            android:layout_marginTop="@dimen/dp_50"
                            android:textColor="#fff"
                            android:textSize="15sp"
                            android:gravity="center"
                            >

                        </TextView>

                    </RelativeLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.65"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:background="@mipmap/test2"
                        android:layout_margin="5dp"

                        ></LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:layout_margin="5dp"
                        android:background="@mipmap/test3"
                        ></LinearLayout>

                </LinearLayout>




            </LinearLayout>
            <LinearLayout
                android:id="@+id/lin_zhiding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_18"
                android:layout_marginEnd="@dimen/dp_18"
                >
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/zhiding_rc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    ></androidx.recyclerview.widget.RecyclerView>



            </LinearLayout>

        <LinearLayout
            android:id="@+id/cannleview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:orientation="vertical"
            android:background="#88F6F2F2"
            ></LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:descendantFocusability="blocksDescendants">

                    <com.rcdz.medianewsapp.view.pullscrllview.NRecyclerView
                        android:id="@+id/android_news_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FFF"
                        android:nestedScrollingEnabled="false"
                        android:orientation="vertical">
                    </com.rcdz.medianewsapp.view.pullscrllview.NRecyclerView>

                </RelativeLayout>
                <!--新闻列表-->


            </LinearLayout>


        </LinearLayout>

    </com.rcdz.medianewsapp.view.pullscrllview.NPullScrollView>

</LinearLayout>