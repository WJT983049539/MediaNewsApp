<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/commontlbar_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:paddingLeft="25dp"
        android:layout_marginTop="@dimen/dp_20"
        android:paddingRight="8dp">

        <EditText
            android:id="@+id/bindTel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:maxLength="20"
            android:layout_weight="1"
            android:gravity="left"
            android:hint="请输入注册手机号码"
            android:inputType="phone"
            android:background="@null"
            android:textColor="#4f4f4f"
            android:textColorHint="#c3c3c3"
            android:textSize="14.0sp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/DividLine"
        android:layout_marginLeft="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:paddingLeft="25dp"
        android:paddingRight="8dp">
        <EditText
            android:id="@+id/shortmsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:maxLength="20"
            android:layout_weight="1"
            android:gravity="left"
            android:hint="短信验证"
            android:inputType="textPassword"
            android:background="@null"
            android:textColor="#4f4f4f"
            android:textColorHint="#c3c3c3"
            android:textSize="14.0sp"/>
        <Button
            android:id="@+id/getSmsCode"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="获取验证码"
            android:textColor="@color/colorWhite"
            android:background="@drawable/com_button_bg"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/DividLine"
        android:layout_marginLeft="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:paddingLeft="25dp"
        android:paddingRight="8dp">

        <EditText
            android:id="@+id/newPwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:maxLength="20"
            android:layout_weight="1"
            android:gravity="left"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:background="@null"
            android:textColor="#4f4f4f"
            android:textColorHint="#c3c3c3"
            android:textSize="14.0sp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/DividLine"
        android:layout_marginLeft="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:paddingLeft="25dp"
        android:paddingRight="8dp">

        <EditText
            android:id="@+id/confirmPwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:maxLength="20"
            android:layout_weight="1"
            android:gravity="left"
            android:hint="确认密码"
            android:inputType="textPassword"
            android:background="@null"
            android:textColor="#4f4f4f"
            android:textColorHint="#c3c3c3"
            android:textSize="14.0sp"/>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/DividLine"
        android:layout_marginLeft="15dp"/>
    <Button
        android:id="@+id/submit_btn"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/com_button_bg"
        android:gravity="center"
        android:text="提交"
        android:textColor="#ffffff"
        android:textSize="16.0sp" />
</LinearLayout>