<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="#fff"
        android:orientation="horizontal"
        >

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="9dp"
            android:layout_height="16dp"
            android:layout_marginRight="5dp"
            android:background="@mipmap/ssback"
            />

        <com.rcdz.medianewsapp.view.customview.ClearEditText
            android:id="@+id/search_Org"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/edit_bg2"
            android:hint="    请输入关键字"
            android:textColor="#4f4f4f"
            android:textColorHint="#c3c3c3"
            android:textSize="16.0sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="9dp"
            android:layout_marginRight="7dp"
            android:layout_marginLeft="@dimen/dp_5"
            android:drawableEnd="@mipmap/close_btn"
            android:paddingEnd="@dimen/dp_10"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/searchBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:text="搜索"
            android:textColor="#A5A5A5"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tab_sousuo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/zonghe"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="综合"
            android:gravity="center"
            android:textColor="#555555"
            android:textSize="15sp"
            android:layout_marginLeft="@dimen/dp_25"
            ></TextView>
        <TextView
            android:id="@+id/video"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="视频"
            android:gravity="center"
            android:textColor="#555555"
            android:textSize="15sp"
            android:layout_marginLeft="@dimen/dp_25"
            ></TextView>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/sousuoshowfragment"
        android:background="#f0f0f0"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
