<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_305"
    android:layout_height="@dimen/dp_153"
    android:layout_gravity="center"
    android:background="@drawable/edit_bg2"
    >

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_21"
        android:text="提示"
        android:textColor="#8E1515"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/message_deletepeop"
        android:layout_width="@dimen/dp_240"
        android:layout_height="@dimen/dp_38"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="确定删除吗"
        android:gravity="center"
        android:textColor="#8E1515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15"></TextView>

    <TextView
        android:id="@+id/delete_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="16dp"
        android:text="确定"
        android:textColor="#0978EC"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/message_deletepeop" />

    <TextView
        android:id="@+id/nativebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:text="取消"
        android:textColor="#0978EC"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/delete_sure"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.359"
        app:layout_constraintStart_toEndOf="@+id/delete_sure" />


</androidx.constraintlayout.widget.ConstraintLayout>