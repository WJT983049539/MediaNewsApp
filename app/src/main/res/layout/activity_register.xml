<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/rename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27.5dp"
        android:layout_marginTop="85.5dp"
        android:text="用户注册"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_user"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="28dp"
        android:layout_marginStart="28dp"
        android:background="@null"
        android:hint="   用户名"
        android:textColorHint="#c3c3c3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rename"></EditText>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#000"
        android:layout_marginEnd="28dp"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_user"
        tools:layout_editor_absoluteX="28dp"></View>


    <EditText
        android:id="@+id/edit_bindphone"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="phone"
        android:background="@null"
        android:hint="   请输入绑定手机号"
        android:textColorHint="#c3c3c3"
        app:layout_constraintStart_toStartOf="@+id/edit_user"
        app:layout_constraintTop_toBottomOf="@+id/edit_user" />

    <TextView
        android:id="@+id/getcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="获取验证码"
        android:textColor="#CCCCCC"
        app:layout_constraintBottom_toBottomOf="@+id/edit_bindphone"
        app:layout_constraintStart_toEndOf="@+id/edit_bindphone" />

    <View
        android:id="@+id/view7"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#000"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_bindphone"
        tools:layout_editor_absoluteX="28dp"></View>

    <EditText
        android:id="@+id/edit_esecode"
        android:layout_width="355dp"
        android:layout_height="39dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/edit_user"
        app:layout_constraintHorizontal_bias="0.0"
        android:background="@null"
        android:hint="   请输入验证码"
        android:textColorHint="#c3c3c3"
        app:layout_constraintStart_toStartOf="@+id/edit_bindphone"
        app:layout_constraintTop_toBottomOf="@+id/edit_bindphone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#000"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintStart_toStartOf="@+id/edit_esecode"
        app:layout_constraintTop_toBottomOf="@+id/edit_esecode"></View>

    <EditText
        android:id="@+id/edit_pwd"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginEnd="28dp"
        android:layout_marginStart="28dp"
        android:background="@null"
        android:hint="   请输入密码"
        android:textColorHint="#c3c3c3"
        app:layout_constraintStart_toStartOf="@+id/edit_esecode"
        app:layout_constraintTop_toBottomOf="@+id/edit_esecode" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#000"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintStart_toStartOf="@+id/edit_esecode"
        app:layout_constraintTop_toBottomOf="@+id/edit_pwd"></View>

    <EditText
        android:id="@+id/edit_pwd_sure"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:layout_marginEnd="28dp"
        android:layout_marginStart="28dp"
        android:inputType="numberPassword"
        android:background="@null"
        android:hint="   请在一次输入密码"
        android:textColorHint="#c3c3c3"
        app:layout_constraintStart_toStartOf="@+id/edit_pwd"
        app:layout_constraintTop_toBottomOf="@+id/edit_pwd" />

    <View
        android:id="@+id/view9"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="25dp"
        android:background="#000"
        app:layout_constraintStart_toStartOf="@+id/edit_esecode"
        app:layout_constraintTop_toBottomOf="@+id/edit_pwd_sure"></View>

    <Button
        android:id="@+id/bt_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="52dp"
        android:text="注册"
        android:textColor="#fff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view9"
        android:background="@drawable/button_bg"/>

    <TextView
        android:id="@+id/go_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="已有账户立即登录"
        android:textColor="#D8D8D8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_register" />


</androidx.constraintlayout.widget.ConstraintLayout>