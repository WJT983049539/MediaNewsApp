<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_108">

    <ImageView
        android:id="@+id/img_img"
        android:layout_width="@dimen/dp_58"
        android:layout_height="@dimen/dp_58"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24.5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginEnd="@dimen/dp_12"
        android:text="110110110110"
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_bumen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="18dp"
        android:text="工信局"
        android:textSize="14sp"
        android:textColor="#000"
        app:layout_constraintStart_toEndOf="@+id/img_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_allmun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="留言主体数量：7"
        android:textSize="14sp"
        android:textColor="#000"
        app:layout_constraintStart_toStartOf="@+id/tv_bumen"
        app:layout_constraintTop_toBottomOf="@+id/tv_bumen" />

    <TextView
        android:id="@+id/tv_backnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="已回复数量：0"
        android:textSize="14sp"
        android:textColor="#000"
        app:layout_constraintStart_toStartOf="@+id/tv_allmun"
        app:layout_constraintTop_toBottomOf="@+id/tv_allmun" />
</androidx.constraintlayout.widget.ConstraintLayout>